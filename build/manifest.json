{
  "manifest_version": 3,
  "name": "ChromeAiAgent",
  "version": "2.2.1",
  "description": "AI-powered browser automation assistant that helps you interact with web pages through natural language commands. Features intelligent element detection and supports multiple AI providers.",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://models.inference.ai.azure.com/*",
    "https://models.github.ai/*",
    "https://api.groq.com/*",
    "https://api.deepseek.com/*",
    "https://api.perplexity.ai/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://*.openai.azure.com/*",
    "https://*.ai.azure.com/*",
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "automation-hotkey": {
      "suggested_key": {
        "default": "Ctrl+M"
      },
      "description": "Open automation command interface"
    }
  },
  "action": {
    "default_title": "Open ChromeAiAgent"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}